<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/ivEmbeddedImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="107dp"
        app:srcCompat="@android:color/transparent" />

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="67dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:color/black" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:text="TextView"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="277dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvUserName"
        android:layout_gravity="fill"
        android:autoLink="all"
        android:linksClickable="true"
        android:maxLines="3"
        android:paddingBottom="3dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="TextView" />

    <ImageButton
        android:id="@+id/ibReply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvUserName"
        android:layout_below="@+id/ivProfileImage"
        android:backgroundTint="@color/white"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_comment" />

    <ImageView
        android:id="@+id/ivFavorite2"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBody"
        android:layout_toStartOf="@+id/tvFaveCount"
        app:srcCompat="@drawable/favorite_selector" />

    <ImageView
        android:id="@+id/ivRetweet2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvBody"
        android:layout_marginEnd="147dp"
        app:srcCompat="@drawable/retweet_selector" />

    <TextView
        android:id="@+id/tvFaveCount"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivRetweet2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp"
        android:textSize="10sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="62dp"
        android:layout_height="14dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivProfileImage"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/twitter_blue"
        android:text="Friends"
        android:textColor="@color/white"
        android:textSize="8sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="62dp"
        android:layout_height="14dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivProfileImage"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="1dp"
        android:background="@color/twitter_blue"
        android:text="Followers"
        android:textColor="@color/white"
        android:textSize="8sp" />

</RelativeLayout>